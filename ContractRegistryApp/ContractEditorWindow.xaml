<Window x:Class="ContractRegistryApp.ContractEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Új szerződés" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Név *:" Grid.Row="0" Margin="5"/>
        <TextBox Name="txtNev" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Szerződő fél 1 *:" Grid.Row="1" Margin="5"/>
        <TextBox Name="txtFel1" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Szerződő fél 2:" Grid.Row="2" Margin="5"/>
        <TextBox Name="txtFel2" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Kezdete:" Grid.Row="3" Margin="5"/>
        <DatePicker Name="dpStart" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Vége:" Grid.Row="4" Margin="5"/>
        <DatePicker Name="dpEnd" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Összeg:" Grid.Row="5" Margin="5"/>
        <TextBox Name="txtOsszeg" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Dokumentum:" Grid.Row="6" Margin="5"/>
        <DockPanel Grid.Row="6" Grid.Column="1" Margin="5">
            <Button Content="..." Width="30" DockPanel.Dock="Right" Click="BtnBrowse_Click"/>
            <TextBox Name="txtFile" IsReadOnly="True"/>
        </DockPanel>

        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Mentés" Width="80" Margin="5" Click="BtnSave_Click"/>
            <Button Content="Mégse" Width="80" Margin="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>